<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  autoReload ="true"
	  internalLogLevel ="Info"
	  internalLogFile ="c:\temp\internal-nlog.txt">


	<extensions>
		<add assembly="Nlog.Web.AspNetCore"/>
	</extensions>


	<targets>
		<target name="exceptions" xsi:type="File" fileName="C:\mb\STUDIA\P1\logs\nlog-all-exceptions-${shortdate}.log"
				layout ="${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${message}"/>

		<target name="allfile" xsi:type="File" fileName="C:\mb\STUDIA\P1\logs\nlog-all-${shortdate}.log"
				layout ="${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${message}"/>
		
		<target name="request-time" xsi:type="File" fileName="C:\mb\STUDIA\P1\logs\request-time.log"
				layout ="${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${message}"/>
	</targets>
	<rules>

		<!-- Request timing -->
		<logger name="AIO_API.Middleware.RequestTimeMiddleware"
				minlevel="Info"
				writeTo="request-time"
				final="true" />

		<!-- Errors & exceptions -->
		<logger name="AIO_API.*"
				minlevel="Error"
				writeTo="exceptions"
				final="true" />

		<!-- Everything else -->
		<logger name="*"
				minlevel="Info"
				writeTo="allfile" />

	</rules>

</nlog>